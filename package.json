{
  "name": "front-end",
  "version": "1.0.0",
  "description": "Front-End template",
  "scripts": {
    "start": "static dist/",
    "prestart": "NODE_ENV=\"${NODE_ENV:-development}\" npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run build-index && npm run build-style && npm run build-script && npm run build-script-libs && npm run build-template",
    "build-index": "jade ./src/index.jade -o ./dist",
    "build-script": "babel --source-root /script src/script -d ./dist/script",
    "build-script-libs": "./scripts/build-script-libs.sh",
    "build-style": "node-sass --include-path ./node_modules src/style/main.scss dist/style/main.css",
    "build-template": "./scripts/build-template.js ./src/template ./src/script",
    "clean": "rm -Rf dist && mkdir dist",
    "reload": "livereload ./dist ",
    "watch": "npm start & npm run watch-index & npm run watch-style & npm run reload & npm run watch-template & npm run watch-script",
    "watch-index": "watchy -w ./src/index.jade -- npm run build-index",
    "watch-template": "watchy -w ./src/template -- npm run build-template",
    "watch-script": "babel --watch ./src/script -d ./dist/script",
    "watch-style": "node-sass -wr ./src/style --include-path ./node_modules -o dist/style/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "jade": "^1.11.0",
    "livereload": "^0.4.1",
    "node-sass": "^3.4.2",
    "node-static": "^0.7.7",
    "normalize.css": "^3.0.3",
    "susy": "^2.2.12",
    "systemjs": "^0.19.20",
    "watchy": "^0.6.5"
  }
}
